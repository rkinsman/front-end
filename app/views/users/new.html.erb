<% provide(:title, 'New User') %>
<h1>Sign up!</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.submit "Create account!" %>
    <% end %>
  </div>
</div>
